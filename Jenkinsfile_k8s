def dockerImage = 'jenkinsciinfra/hashicorp-tools:0.5.135' // Tracked by updatecli

parallel(
  failFast: true,
  'Build Easyvpn': {
    podTemplate(
      containers: [
        containerTemplate(
          name: 'jnlp',
          image: dockerImage,
          resourceRequestCpu: '2',
          resourceLimitCpu: '2',
          resourceRequestMemory: '2Gi',
          resourceLimitMemory: '2Gi',
        ),
      ]
    ) {
      node(POD_LABEL) {
        checkout scm
        dir('utils/easyvpn') {
          sh 'make build_linux'
        }
      }
    }
  },
  'docker-and-updatecli': {
    parallelDockerUpdatecli([imageName: 'openvpn', updatecliConfig: [containerMemory: '1024Mi', updatecliDockerImage: dockerImage]])
  },
)
